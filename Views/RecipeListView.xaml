<Window x:Class="CookMaster.Views.RecipeListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views" 
        xmlns:services="clr-namespace:CookMaster.Services"
        xmlns:viewModels="clr-namespace:CookMaster.ViewModels"
        
        mc:Ignorable="d"
        Title="CookMaster" Height="400" Width="640"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Watermark style for TextBox -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="Bd"
                          Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                            <!-- The watermark -->
                            <TextBlock x:Name="Watermark"
                   Text="{TemplateBinding Tag}"
                                   TextWrapping="Wrap"
                   Margin="6,4,6,4"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="#99000000"
                   IsHitTestVisible="False"
                   Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show watermark when Text is empty -->
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <!-- Also show when Text is null (extra safety) -->
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5* "/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Recipe Manager" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       
                       Margin="0,0,0,0" 
                       FontSize="24" FontWeight="Bold" />
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0">
                <TextBlock Text="User:"  VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding Users.CurrentUser.Username}" VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                


            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource WatermarkTextBox}" Tag="Search Title" TextWrapping="Wrap"
                             Height="20" Width="100" VerticalAlignment="Center" Margin="5,5,5,5"/>
                    <TextBlock Text="Category"
                             IsHitTestVisible="False"
                             Margin="0,0,0,0"
                             VerticalAlignment="Center"
                             Foreground="Gray"/>
                    <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"
                             Height="20" Width="100" VerticalAlignment="Center" Margin="5,5,5,5"/>

                    <DatePicker Width="105"
                             SelectedDate="{Binding ExactDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Clear" Height="20" Margin="5,5,5,5" Command="{Binding ClearFiltersCommand}"/> 


                </StackPanel>
                <DataGrid  ItemsSource="{Binding RecipesView}"
                  SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False" 
                      AutoGenerateColumns="False"
                      IsReadOnly="True">


                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Recipe title" Binding="{Binding Title}" Width="1*"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="0.6*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding CreatedUtc, StringFormat=\{0:yyyy-MM-dd\}}" Width="0.5*"/>
                        <DataGridTextColumn Header="Owner" Width="0.4*">
                            <DataGridTextColumn.Binding>
                                <Binding Path="OwnerUsername" TargetNullValue="Global"/>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <!--Binding item SelectedItem.(Property) för att välja specifik property av selected item till varje textbox  -->
            
            <StackPanel Height="auto" Grid.Column="1">
                <Button Name="AddRecipe" Content="Add recipe" Height="30" Margin="5,5,5,0" Command="{Binding AddRecipeCommand}"/>
                <Button Name="RecipeDetails" Content="Recipe details" Height="30" Margin="5,5,5,0" Command="{Binding RecipeDetailsCommand}"/>
                <Button Name="RemoveRecipe" Content="Remove recipe" Height="30" Margin="5,5,5,0" Command="{Binding RemoveCommand}"/>
                <Button Name="UserDetails" Content="User details" Height="30" Margin="5,5,5,0" Command="{Binding UserDetailsCommand}"/>
                <Button Name="Info" Content="Info" Height="30" Margin="5,5,5,0" Command="{Binding InfoCommand}"/>
                <Button Name="SignOut" Content="Sign out" Height="30" Margin="5,5,5,0" Command="{Binding SignOutCommand}"/>
            </StackPanel>


        </Grid>

    </Grid>
</Window>
