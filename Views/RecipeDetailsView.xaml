<Window x:Class="CookMaster.Views.RecipeDetailsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        xmlns:viewModels="clr-namespace:CookMaster.ViewModels"
        xmlns:conv="clr-namespace:CookMaster.Converters"
        mc:Ignorable="d"
        Title="RecipeDetailsView" Height="300" Width="500">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InvBoolToVis"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5* "/>
            </Grid.ColumnDefinitions>


            <!-- Visa Title och Category sidan -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Visibility="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}">
                <TextBlock Text="{Binding SelectedRecipe.Title}" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedRecipe.Category}"/>
            </StackPanel>
            <!-- Edit Title och Category sidan -->
            <StackPanel Grid.Column="0" Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}">
                <TextBox  Text="{Binding EditTitle, UpdateSourceTrigger=PropertyChanged}" FontWeight="Bold"/>
                <ComboBox ItemsSource="{Binding Categories}"
            SelectedItem="{Binding EditCategory, Mode=TwoWay}"/>
            </StackPanel>


            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" >
                    <TextBlock Text="User: "  VerticalAlignment="Top" FontSize="14" />
                    <TextBlock Text="{Binding SelectedRecipe.OwnerUsername}" VerticalAlignment="Top" FontSize="14" />

                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedRecipe.CreatedUtc, StringFormat=Created: \{0:yyyy-MM-dd\}}" 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                              
                               FontSize="14" FontWeight="Normal" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="192*"/>
                <ColumnDefinition Width="192*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="90*"/>

            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Ingredients" HorizontalAlignment="Left" FontWeight="Bold" Margin="67,0,0,0"/>
            <TextBlock Grid.Column="1" Text="Instructions" HorizontalAlignment="Left" FontWeight="Bold" Margin="66,0,0,0"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="3*"/>

            </Grid.ColumnDefinitions>



            <!-- Visa ingredients sidan -->
            <ScrollViewer Grid.Column="0">
                <ListBox Grid.Column="0" Name="IngredientsListBox" Margin="5,0,0,0"
                         ItemsSource="{Binding SelectedRecipe.Ingredients}" Visibility="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}"/>
                

            </ScrollViewer>

            <!-- Edit ingredients sidan -->
            <TextBox Grid.Column="0" Margin="5,0,0,0"
                 Text="{Binding EditIngredientsText, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"/>





            <!-- Visa instructions sidan -->
            <ScrollViewer Grid.Column="1" Height="Auto" Margin="5,0,0,0" Visibility="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}">
                <TextBlock Text="{Binding SelectedRecipe.Instructions}"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

            <!-- Edit Instructions sidan -->
            <TextBox Grid.Column="1" Margin="5,0,0,0"
                     Text="{Binding EditInstructions, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True" TextWrapping="Wrap"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"/>

            
            
            <StackPanel Height="auto" Grid.Column="2">
                <Button Name="EditRecipe" Content="Edit" Command="{Binding EditCommand}" 
                        IsEnabled="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}" Height="30" Margin="5,5,5,0" />
                <Button Name="Save" Content="Save" Height="30" Margin="5,5,5,0"
                        Command="{Binding SaveCommand}" IsEnabled="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}"/>
                <Button Name="Cancel" Content="Cancel" Height="30" Margin="5,5,5,0"
                        Command="{Binding CancelCommand}" IsEnabled="{Binding IsEditing, Converter={StaticResource InvBoolToVis}}"/> 

            </StackPanel>

            
        </Grid>

    </Grid>
</Window>
