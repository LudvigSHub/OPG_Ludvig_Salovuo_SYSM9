<Window x:Class="CookMaster.Views.InfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About / Help"
        Width="520" Height="440"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize">
    <Grid Margin="16" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Rubrik -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Border Width="28" Height="28" CornerRadius="14" Background="#2D6CDF" Margin="0,0,8,0">
                <TextBlock Text="i" Foreground="White" FontWeight="Bold"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <StackPanel>
                <TextBlock Text="CookMaster – About" FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Quick user guide and about us" Foreground="#666" FontSize="12"/>
            </StackPanel>
        </StackPanel>

        <!-- Innehåll -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Intro -->
                <TextBlock Text="Welcome to CookMaster! here is a short walkthrough on how to use the program."
                           TextWrapping="Wrap" Margin="0,0,0,12"/>

                <Separator/>

                <!-- Hur man använder appen -->
                <TextBlock Text="Instructions" FontWeight="Bold" Margin="0,8,0,4"/>
                <TextBlock Text="• Sign in or register a new user."
                           TextWrapping="Wrap" Margin="0,0,0,2"/>
                <TextBlock Text="• Add recipe with the ”Add Recipe” button."
                           TextWrapping="Wrap" Margin="0,0,0,2"/>
                <TextBlock Text="• Edit recipes with the ”Recipe Details” button."
                           TextWrapping="Wrap" Margin="0,0,0,2"/>
                <TextBlock Text="• Use the “User Details” button to change username, password or country."
                           TextWrapping="Wrap" Margin="0,0,0,2"/>

                <Separator/>

                <!-- Företagsinfo -->
                <TextBlock Text="About CookMaster" FontWeight="Bold" Margin="0,8,0,4"/>
                <TextBlock Text="CookMaster is a recipe management application focused on simplicity and ease of use.
Its goal is to provide smooth workflows, intuitive recipe handling, and a clean, user-friendly interface."
                           TextWrapping="Wrap"/>

                <Separator/>

                <!-- Tips (valfritt) -->
                <TextBlock Text="Tips" FontWeight="Bold" Margin="0,8,0,4"/>
                <TextBlock Text="• Write the correct amounts and format for your ingredients
• Provide clear, easy-to-follow instructions
• Choose the right categories for your recipes
• And most importantly — enjoy cooking!"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottenrad -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Width="90" Command="{Binding CloseCommand}" />
        </StackPanel>

    </Grid>
</Window>
