<Window x:Class="CookMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster"
        mc:Ignorable="d"
        Title="CookMaster" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="BackGroundImage" ImageSource="/Resources/ChatGPT Image Oct 21, 2025, 09_15_48 AM.png"/>
        </Grid.Background>

        <Border Width="400" Padding="16"
            Background="#66000000" CornerRadius="8"
            HorizontalAlignment="Left" VerticalAlignment="Bottom"
            Margin="80,0,0,80">
            <!-- Själva formuläret -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Username -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:"
                       VerticalAlignment="Center" Margin="0,0,12,0" Foreground="White"/>
                <TextBox  Grid.Row="0" Grid.Column="1" Width="220" MinWidth="220" Height="28"
                      Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Password -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Password:"
                       VerticalAlignment="Center" Margin="0,0,12,0" Foreground="White"/>
                <PasswordBox x:Name="Pwd" Grid.Row="2" Grid.Column="1" Width="220" MinWidth="220" Height="28"
                         PasswordChanged="Pwd_PasswordChanged"/>

                <!-- Meddelande -->

                <TextBlock Grid.Row="4" Grid.Column="0" Text="F2A Code:"
                           VerticalAlignment="Center"  Margin="0,0,12,0" Foreground="White"/>
                <TextBox  Grid.Row="4" Grid.Column="1" Width="220" Height="28"
                           MaxLength="8"
                           Text="{Binding F2ACode, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Knappar -->
                <Grid Grid.Row="6" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <!-- ny spacer -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- ny kolumn för Forgot -->
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Log in" Width="70" Height="36"
                            Command="{Binding LoginCommand}" IsEnabled="{Binding CanLogin}"/>
                    <Button Grid.Column="2" Content="Register" Width="70" Height="36"
                            Command="{Binding RegisterCommand}"/>
                    <Button Grid.Column="4" Content="Get F2A code" Width="80" Height="36"
                            Command="{Binding GetF2ACodeCommand}"/>

                    <!-- LITEN FORGOT-PASSWORD-KNAPP -->
                    <Button Grid.Column="6" Content="Forgot password" Width="120" Height="36"
            Command="{Binding OpenForgotPasswordCommand}" />
                </Grid>
            </Grid>
        </Border>



    </Grid>
</Window>
